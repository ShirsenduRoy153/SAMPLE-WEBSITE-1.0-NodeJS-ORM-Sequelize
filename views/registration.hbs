    <div class="container1">
        <div id="registration_modal" class="modal" style="display: none;">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Registration Form</h2>
                <form id="registration_form">
                    <div class="form-group">
                        <label for="firstname">First Name:</label>
                        <input type="text" id="firstname" name="firstname" required>
                    </div>
                    <div class="form-group">
                        <label for="lastname">Last Name:</label>
                        <input type="text" id="lastname" name="lastname" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="phoneno">Phone Number:</label>
                        <input type="tel" id="contno" name="contno" required>
                    </div>
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button type="submit" id="register_btn" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>


    <div class="container2">
        <table>
            <tr>
                <th>firstname</th>
                <th>lastname</th>
                <th>email</th>
                <th>phn</th>
                <th>username</th>
                <th>password</th>
                <th>actions</th>
            </tr>
            {{#each users}}
            <tr>
                <td>{{this.firstname}}</td>
                <td>{{this.lastname}}</td>
                <td>{{this.email}}</td>
                <td>{{this.contno}}</td>
                <td>{{this.username}}</td>
                <td>{{this.password}}</td>
                <td>
                    <button type="button" id="delete_id" class="delete-btn" data-id="{{this.id}}">Delete</button>
                    <button type="button" id="update_id" class="update-btn" data-id="{{this.id}}">Update</button>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>

    <!--///////////////////////////////////////////////////Modal for Update Form///////////////////////////////////////////////////// -->
<div id="update_modal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Update User</h2>
        <form id="update_form">
            <input type="hidden" id="up_id" name="id">
            <div class="form-group">
                <label for="update_firstname">First Name:</label>
                <input type="text" id="update_firstname" name="firstname" required>
